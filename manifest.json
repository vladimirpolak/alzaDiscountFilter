{
    "manifest_version": 3,
    "name": "Alza Discount Filter",
    "version": "1.0",
    "description": "Allows to filter items on alza.sk/cz based on the value of discount.",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_popup": "src/popup.html"
    },
    "background": {
      "service_worker": "src/background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.alza.sk/*", "https://www.alza.cz/*"],
        "js": ["src/content.js"]
      }
    ]
  }
  